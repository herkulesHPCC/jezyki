void Powieksz(int &a)
{
	a++;
}

void Powieksz(int *a)
{
	(*a)++;
}


void wypisztablice(int *t, int r)
{
	for (int i = 0; i < r; i++) 
	{
		cout << *(t+i) << " ";
	}
	cout << endl;
}

void zmientablice(int *t, int r)
{
	for (int i = 0; i < r; i++)
	{
		cout << "T[" << i << "]=";
		cin >> t[i];
	}
	cout << endl;
}

int* Utworz(int rozmiar)
{
	int *t = new int[rozmiar];
	zmientablice(t, rozmiar);
	return t;
}

int* OdTylu(int *t1, int r)
{
	int *t2 = new int[r];
	for (int i = 0; i < r; i++)
	{
		t2[i] = t1[r - 1 - i];
	}
	return t2;
}


void Mix(int &x, int &y)
{
	int tmp = x;
	x = y;
	y = tmp;
}
