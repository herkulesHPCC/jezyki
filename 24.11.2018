#include "stdafx.h"
#include <iostream>

using namespace std;

void Powieksz(int &a);
void Powieksz(int *a);
void wypisztablice(int *t, int r);
void zmientablice(int *t, int r);
int* Utworz(int rozmiar);
int main()
{
	int liczba1 = 1;
	int *pLiczba1 = &liczba1;
	cout << liczba1 << " " << &liczba1 << endl;
	cout << pLiczba1 << " " << *pLiczba1 << endl;

	(*pLiczba1)++;
	cout << liczba1 << endl;
	int &rliczba1 = liczba1;
	rliczba1++;
	cout <<liczba1<<endl;
	Powieksz(liczba1);
	cout << liczba1 << endl;
	Powieksz(&liczba1);
	cout << liczba1 << endl;

	int tab1[3] = { 1,2,3 };
	wypisztablice(tab1, 3);
	zmientablice(tab1, 3);
	wypisztablice(tab1, 3);

	int *tab2 = Utworz(5);
	wypisztablice(tab2, 5);
	system("PAUSE");
    return 0;
}

void Powieksz(int &a)
{
	a++;
}

void Powieksz(int *a)
{
	(*a)++;
}


void wypisztablice(int *t, int r)
{
	for (int i = 0; i < r; i++) 
	{
		cout << *(t+i) << " ";
	}
	cout << endl;
}

void zmientablice(int *t, int r)
{
	for (int i = 0; i < r; i++)
	{
		cout << "T[" << i << "]=";
		cin >> t[i];
	}
	cout << endl;
}

int* Utworz(int rozmiar)
{
	int *t = new int[rozmiar];
	zmientablice(t, rozmiar);
	return t;
}
